<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../layout/head') %>
</head>
<body>
    <%- include('../layout/header') %>
    <ul>
        <% if(jokes.length){ %>
            <% jokes.forEach(joke => { %>
                <li>
                    <h1> <%= joke.id %></h1>
                    <h2>Type: <%= joke.type%></h2>
                    <h2>Setup: <%= joke.setup%></h2>
                    <h2>Punchline: <%= joke.punchline%></h2>
                    <form action="/favorite/<%= joke.id %>" method="GET">
                        <input type="hidden" name="id" value="<%= joke.id %>">
                        <input type="hidden" name="type" value="<%= joke.type %>">
                        <input type="hidden" name="setup" value="<%= joke.setup %>">
                        <input type="hidden" name="punchline" value="<%= joke.punchline %>">
                        <button>Show details</button>
                    </form>
                </li>
    
            <%})%>
        <% } else {%>
            <p>No available jokes</p>
       <% } %>
        
    </ul>
    <%- include('../layout/footer') %>
</body>
</html>